<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="base">
        <item name="android:padding">10dp</item>
    </style>

    <style name="title" parent="@style/base">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="@style/base">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <dimen name="dashboard_item_margin">15dp</dimen>

    <color name="dashboard_item_color">#FFFFFF</color>

    <dimen name="add_site_text_margin">10dp</dimen>
    <dimen name="site_selection_item_margin">8dp</dimen>

    <!-- Text editor -->
    <style name="btn_editor_toggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="btn_editor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/bg_editor_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="editor_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/editor_divider</item>
    </style>

    <!-- Dashboard item -->
    <style name="dashboard_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_margin">10dp</item> -->
        <item name="android:background">@drawable/bg_dashboard_item</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/dashboard_item_color</item>
    </style>

    <style name="dashboard_item_full_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_margin">10dp</item> -->
        <item name="android:background">@drawable/bg_dashboard_item</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/dashboard_item_color</item>
    </style>

    <style name="dashboard_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dashboard_divider</item>
    </style>

    <!-- Global key/value -->
    <style name="item_key">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="item_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/bg_checkbox</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- controls -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="round_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/round_button_text</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/edittext_text</item>
    </style>

    <style name="login_form_edittext" parent="edittext">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/bg_radiobutton</item>
    </style>

</resources>